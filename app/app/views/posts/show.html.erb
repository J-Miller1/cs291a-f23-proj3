<h1>
    <%= @post.body %>
</h1>

<h2>Add a Comment:</h2>
<%= render 'comments/form' %>

<h3>Comments:</h3>
<% @post.comments.each do |comment| %>    
    <% if not comment.id.nil? %>  
        <p>
            <%= comment.email + ": " + comment.body %>
        </p>
    <% end %>
<% end %>

<%= link_to "Back to User Page", User.find(@post.user_id) %>

<ul>
  <li><%= link_to "Edit Post", edit_post_path(@post) %></li>
  <li><%= link_to "Delete Post", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure??"
                  } %></li>
</ul>