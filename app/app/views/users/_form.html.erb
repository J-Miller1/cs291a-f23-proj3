<%= form_with model: user do |form| %>
    <div>
      <%= form.label :email %><br>
      <%= form.text_field :email %>
      <% user.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :bio %><br>
      <%= form.text_area :bio %><br>
      <% user.errors.full_messages_for(:bio).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.submit %>
    </div>
  <% end %>