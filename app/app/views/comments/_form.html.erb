<%= form_with model: [ @post, @post.comments.build ] do |form| %>
    <p>
        <%= form.label :email %><br>
        <%= form.text_field :email %>
        <% @post.comments.each do |comment| %>
            <% comment.errors.full_messages_for(:email).each do |message| %>
              <div><%= message %></div>
            <% end %>
        <% end %>
    </p>
    <p>
        <%= form.label :body %><br>
        <%= form.text_area :body %>
        <% @post.comments.each do |comment| %>
            <% comment.errors.full_messages_for(:body).each do |message| %>
              <div><%= message %></div>
            <% end %>
        <% end %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>